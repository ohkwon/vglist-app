<table class="table table-hover">
  <tr>
    <th>Game</th>
    <th>Release Date</th>
    <th>Lowest Current Price</th>
    <th>Owned?</th>
  </tr>
  <% @user_games.each do |user_game| %>
    <tr>
      <td><a href="/games/<%= user_game.game.id %>"><%= user_game.game.name %></td>
      <% if user_game.game.platformed_games.any? %>
        <td><%= user_game.game.platformed_games.first.release_date %></td>
        <% if user_game.game.platformed_games.first.deals.any? %>
          <td>
          <% user_game.game.lowest_deals.each do |platform_deal| %>
            <p><a href="/deals/<%= platform_deal[:platformed_game_id] %>"><%= platform_deal[:platform_name] %>: <%= number_to_currency(platform_deal[:price], :unit => "$") %></a></p>
          <% end %>
          </td>
        <% else %>
          <td>N/A</td>
        <% end %> 
      <% else %>
        <td>N/A</td>
        <td>N/A</td>
      <% end %>
      <td>
        <%= "Owned" if user_game.ownership %>
        <%= "Wanted" unless user_game.ownership %> 
        <%= form_tag "/user_games/#{user_game.id}", method: :patch do %>
          <% if user_game.ownership %>
            <%= submit_tag "Change to Wanted" %>
          <% else %>
            <%= submit_tag "Change to Owned" %>
          <% end %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>