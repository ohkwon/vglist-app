<table class="table table-hover">
  <tr>
    <th>Game</th>
    <th>Owned?</th>
  </tr>
  <% @user_games.each do |user_game| %>
    <tr>
      <td><%= Game.find_by(id: user_game.game_id).name %></td>
      <td>
        <%= "Yes" if user_game.ownership %>
        <%= "No" unless user_game.ownership %> 
      </td>
    </tr>
  <% end %>
</table>