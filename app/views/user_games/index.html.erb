            <div class="product-tab nav nav-tabs">
              <ul>    
                <% if @search.empty? %> 
                  <% if @page.to_i > 1 %>
                    <li><a href="/user_games?page=<%= @page.to_i - 1 %>"><%= @page.to_i - 1 %></a></li>
                  <% end %>                                 
