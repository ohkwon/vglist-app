<%= form_tag "/games/#{@game.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @game.name , placeholder: "Game Name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @game.description , placeholder: "Description", class: "form-control" %>
  </div>
  <div>
    <%= submit_tag "Update Game!" %>
  </div>
<% end %>