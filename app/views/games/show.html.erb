<!-- pages-title-start -->
<section class="contact-img-area" style='background-image: url("https://res.cloudinary.com/igdb/image/upload/<%= @game.game_covers.first.cloudinary_id %>.jpg"); background-size:1400px'>
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <div class="con-text">
          <h2 class="page-title"><%= @game.name %></h2>
          <p><a href="/games">Home</a> | Game</p>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- pages-title-end -->

<!-- single product content section start -->
<section class="single-product-area sit">
  <div class="container">
    <div class="row">
      <!-- Single Product Description Start -->
      <div class="col-md-12">
        <div class="row">

          <!-- Images Start -->
          <div class="col-md-6 col-sm-6 none-si-pro">
            <div class="pro-img-tab-content tab-content">

              <% if @game_images.any? %>
                <% @game_images.each_with_index do |image, index| %>
                  <% if index == 0 %>
                    <div class="tab-pane active" id="image-<%= index + 1 %>">
                      <div class="simpleLens-big-image-container">
                        <a class="simpleLens-lens-image" data-lightbox="roadtrip" data-lens-image="https://res.cloudinary.com/igdb/image/upload/<%= image.cloudinary_id %>.jpg" href="https://res.cloudinary.com/igdb/image/upload/<%= image.cloudinary_id %>.jpg">
                          <img src="https://res.cloudinary.com/igdb/image/upload/<%= image.cloudinary_id %>.jpg" alt="" class="simpleLens-big-image">
                        </a>
                      </div>
                    </div>
                  <% else %>
                    <div class="tab-pane" id="image-<%= index + 1 %>">
                      <div class="simpleLens-big-image-container">
                        <a class="simpleLens-lens-image" data-lightbox="roadtrip" data-lens-image="https://res.cloudinary.com/igdb/image/upload/<%= image.cloudinary_id %>.jpg" href="https://res.cloudinary.com/igdb/image/upload/<%= image.cloudinary_id %>.jpg">
                          <img src="https://res.cloudinary.com/igdb/image/upload/<%= image.cloudinary_id %>.jpg" alt="" class="simpleLens-big-image">
                        </a>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <% end %>

            </div>
            <div class="pro-img-tab-slider indicator-style2">
              <% @game_images.each_with_index do |image, index| %>
                <div class="item"><a href="#image-<%= index + 1 %>" data-toggle="tab"><img src="https://res.cloudinary.com/igdb/image/upload/<%= image.cloudinary_id %>.jpg" alt="" /></a></div>
              <% end %>
            </div>
          </div>
          <!-- Images End -->

          <!-- Product Info Start -->
          <div class="col-md-6 col-sm-6">
            <div class="cras">
              <div class="product-name">
                <h2><%= @game.name %></h2>
              </div>

              <div class="pro-rating cendo-pro">
                <div class="pro_one">
                  <img src="img/icon-img/stars-1.png" alt="">
                </div>
                <p class="rating-links">
                  <a href="#">1 Reviews</a>
                </p>
              </div>

              <p class="availability in-stock">
                Product Code: Product 3
              </p>
              <p class="availability in-stock2">
                Availability:In stock
              </p>

              <div class="short-description">
                <p>Summary: <%= @game.summary %></p>
              </div>

              <div class="pre-box">
                <span class="special-price">$155.00</span>
              </div>
              
              <div class="add-to-box1">
                <div class="add-to-box add-to-box2">
                  <div class="add-to-cart">

                    <div class="input-content">
                      <label>Quantity:</label>
                      <div class="quantity">
                        <div class="cart-plus-minus">
                          <input type="text" value="0" name="qtybutton" class="cart-plus-minus-box">
                        </div>
                      </div>
                    </div>

                    <div class="product-icon">
                      <%= link_to "<i class='fa fa-heart'></i>".html_safe, "/user_games/#{@game.id}", 'data-placement' => 'top', 'data-toggle' => 'tooltip', 'data-original-title' => 'Add To List', method: :post %>
                      <%= link_to "<i class = 'fa fa-retweet'></i>".html_safe, "/deals/new/#{@game.id}", 'data-placement' => 'top', 'data-toggle' => 'tooltip', 'data-original-title' => 'Add Deal to Game' %>
                    </div>

                  </div>
                </div>
              </div>
              <div class="s-cart-img">
                <a href="#">
                  <img alt="" src="img/icon-img/screenshot_2.png">
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 col-xs-12">
            <div class="text">
              <!-- Nav tabs -->
              <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active">
                  <a href="#home" aria-controls="home" role="tab" data-toggle="tab">Product Description</a>
                </li>

                <% @game.platformed_games.each do |platformed_game| %>
                  <li role="presentation">
                    <a href="#<%= platformed_game.platform.name.gsub(/[ ]/, '-').gsub(/[()]/, '') %>" aria-controls="profile" role="tab" data-toggle="tab"><%= platformed_game.platform.name %> Deals</a>
                  </li>
                <% end %>

                <li role="presentation">
                  <a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Add Deal</a>
                </li>
              </ul>
              <!-- Tab panes -->
              <div class="tab-content tab-con2">
                <div role="tabpanel" class="tab-pane active" id="home">
                  Story: <%= @game.storyline %>
                </div>
                <!-- Deal Show Start-->
                <% @game.platformed_games.each do |platformed_game| %>
                  <div role="tabpanel" class="tab-pane" id="<%= platformed_game.platform.name.gsub(/[ ]/, '-').gsub(/[()]/, '') %>">
                      <div class="container">
                        <div class="row">
                          <div class="col-md-12 col-xs-12">
                            <div class="s-cart-all">
                              <div class="cart-form table-responsive">
                                <h3>Deals on <%= platformed_game.platform.name %></h3>
                                <table id="shopping-cart-table" class="data-table cart-table" style="max-width:95%">
                                  <tr>
                                    <th>Price</th>
                                    <th>Retailer</th>
                                    <th>Posting Date</th>
                                    <th>Description</th>
                                  </tr>
                                  <% if platformed_game.deals.where(active: true).any? %>
                                    <% platformed_game.deals.where(active: true).order(:price).each do |deal| %>
                                      <tr>
                                        <td>
                                          <%= number_to_currency(deal.price, unit: "$") %>
                                        </td>
                                        <td class="sop-cart an-sh">
                                            <a href="<%= deal.url %>"><%= deal.retailer %></a>
                                        </td>
                                        <td class="sop-cart">
                                          <%= deal.date.strftime("%B %d, %Y") %>
                                        </td>
                                        <td class="cen">
                                          <%= deal.description %>
                                        </td>
                                      </tr>
                                    <% end %>
                                  <% end %>
                                </table>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                  </div>
                <% end %>
                <!-- Deal Show End-->

                <!-- When ready, Implement adding a Deal here! -->
                <div role="tabpanel" class="tab-pane" id="profile">
                  <form class="form-horizontal">
                    <div id="review">
                      <table class="table table-striped table-bordered">
                        <tr>
                          <td style="width: 50%;">
                            <strong>demo</strong>
                          </td>
                          <td class="text-right">25/01/2016</td>
                        </tr>
                        <tr>
                          <td colspan="2">
                            <p class="text an-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mauris sit amet sem varius, fringilla erat a, blandit arcu. Cras sit amet justo eu erat imperdiet dictum ac eget nulla. Aliquam erat volutpat.</p>
                            <span class="fa fa-stack">
                              <i class="fa fa-star fa-stack-2x"></i>
                              <i class="fa fa-star-o fa-stack-2x"></i>
                            </span>
                            <span class="fa fa-stack">
                              <i class="fa fa-star fa-stack-2x"></i>
                              <i class="fa fa-star-o fa-stack-2x"></i>
                            </span>
                            <span class="fa fa-stack">
                              <i class="fa fa-star-o fa-stack-2x"></i>
                            </span>
                            <span class="fa fa-stack">
                              <i class="fa fa-star-o fa-stack-2x"></i>
                            </span>
                            <span class="fa fa-stack">
                              <i class="fa fa-star-o fa-stack-2x"></i>
                            </span>
                          </td>
                        </tr>
                      </table>
                      <div class="text-right"></div>
                    </div>
                    <h2 class="write">Write a review</h2>
                    <div class="form-group required">
                      <div class="col-sm-12">
                        <label class="control-label" for="input-name">Your Name</label>
                        <input id="input-name" class="form-control" type="text" value="" name="name">
                      </div>
                    </div>
                    <div class="form-group required">
                      <div class="col-sm-12">
                        <label class="control-label" for="input-review">Your Review</label>
                        <textarea id="input-review" class="form-control" rows="5" name="text"></textarea>
                        <div class="help-block">
                          <span class="text-danger">Note:</span>
                          HTML is not translated!
                        </div>
                      </div>
                    </div>
                    <div class="form-group required">
                      <div class="col-sm-12">
                        <label class="control-label">Rating</label>
                        Bad 
                        <input type="radio" value="1" name="rating">
                        <input type="radio" value="2" name="rating">
                        <input type="radio" value="3" name="rating">
                        <input type="radio" value="4" name="rating">
                        <input type="radio" value="5" name="rating">
                        Good
                      </div>
                    </div>
                    <div class="form-group required">
                      <div class="col-sm-12">
                        <label class="control-label" for="input-captcha">Enter the code in the box below</label>
                        <input id="input-captcha" class="form-control" type="text" value="" name="captcha">
                      </div>
                    </div>
                    <div class="buttons si-button">
                      <div class="pull-right">
                        <button id="button-review" class="btn btn-primary" data-loading-text="Loading..." type="button">Continue</button>
                      </div>
                    </div>
                  </form>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Single Product Description end-->

      <!-- Suggestions start -->

      <!-- Suggestions End -->
    </div>
  </div>
</div>
</section>

<section class="section-padding-top"></section>