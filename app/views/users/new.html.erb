<%= form_tag '/users', method: :post do %>
  <div class="form-group">
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, "", placeholder: "First Name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, "", placeholder: "Last Name", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, "", placeholder: "Email Address", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, "", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :password_confirmation %>
    <%= password_field_tag :password_confirmation, "", class: "form-control" %>
  </div>
  <div>
    <%= submit_tag "Create Account" %>
  </div>
<% end %>